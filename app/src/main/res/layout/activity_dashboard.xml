<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.amin2.hangout.DashboardActivity"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_weight="1.02">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/loginBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:onClick="logIn"
                android:background="@drawable/ic_login_black_24dp" />

            <Button
                android:id="@+id/signupBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@drawable/ic_signup_black_24dp" />

            <Button
                android:id="@+id/settingsBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:background="@drawable/ic_settings_applications_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/cameraBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_camera_black_24dp" />

            <Button
                android:id="@+id/homeBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@drawable/ic_home_black_24dp" />

            <Button
                android:id="@+id/weatherBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:background="@drawable/ic_weather_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/GallaryBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_gallary_24dp" />

            <Button
                android:id="@+id/nearbyBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@drawable/ic_nearby_on_black_24dp" />

            <Button
                android:id="@+id/exitBt"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_weight="0.09"
                android:background="@drawable/ic_exit_to_app_black_24dp" />
        </LinearLayout>

    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
